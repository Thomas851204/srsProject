@model srsProject.Models.Owner

@{
    ViewData["Title"] = "Add Owner";
}

<h1>Add Owner</h1>

<form method="post" action="@Url.Action("SaveOwner", "SrsProject")">
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>

    <div class="form-group">
        <label for="BirthDate">Birth Date:</label>
        <input type="date" class="form-control" id="BirthDate" name="BirthDate" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Owner", "SrsProject")'">Cancel</button>
</form>
